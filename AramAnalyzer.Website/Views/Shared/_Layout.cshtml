<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - AramAnalyzer</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
	<header>
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
			<div class="container">
				<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">AramAnalyzer</a>
				<button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
					<ul class="navbar-nav flex-grow-1">
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">FAQ</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Source</a>
						</li>
					</ul>

					<form asp-controller="Home" asp-action="Analysis" method="post">
						<select style="height:30px; margin-top:1px" name="region">
							<option value="Euw">EUW</option>
							<option value="Eune">EUNE</option>
							<option value="Na">NA</option>
							<option value="Ru">RU</option>
							<option value="Tr">TR</option>
							<option value="Br">BR</option>
							<option value="Las">LAS</option>
							<option value="Lan">LAN</option>
							<option value="Kr">KR</option>
							<option value="Oce">OCE</option>
						</select>
						<input type="text" name="name" placeholder="Summoner name" style="width:220px" />
						<input type="submit" value="Analyze" />

						<input style="margin-left: 15px" type="checkbox" name="platinumWinrates" id="platinumWinrates" checked />
						<label for="platinumWinrates">Use Platinum+ winrates?</label>
					</form>
				</div>
			</div>
		</nav>
	</header>
	<div class="container">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<footer class="border-top footer text-muted">
		<div class="container">
			<p style="margin:0px; text-align: center">
				&copy; 2021 - AramAnalyzer - J.C. &#38; R.K. | <a asp-area="" asp-controller="Home" asp-action="Privacy">FAQ</a>  <a asp-area="" asp-controller="Home" asp-action="Privacy">Source</a>
			</p>
		</div>
	</footer>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>